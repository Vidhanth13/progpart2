@model AfriEnergy_ST10146835.Models.FilterProducts

@{
    ViewData["Title"] = "Filter Products";
}

<h1>@ViewData["Title"]</h1>

<form method="get">
    <div class="form-group">
        <label for="ProductType">Product Type</label>
        <input type="text" id="ProductType" name="productType" class="form-control" value="@Model.ProductType" />
    </div>
    <div class="form-group">
        <label for="StartDate">Start Date</label>
        <input type="date" id="StartDate" name="startDate" class="form-control" value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div class="form-group">
        <label for="EndDate">End Date</label>
        <input type="date" id="EndDate" name="endDate" class="form-control" value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model.Products != null && Model.Products.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Category</th>
                <th>Production Date</th>
                <th>Farmer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Category</td>
                    <td>@item.ProductionDate?.ToString("yyyy-MM-dd")</td>
                    <td>@item.User?.Username</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No products found.</p>
}
